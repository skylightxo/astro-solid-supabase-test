---
import { Cart } from "./Cart";

type Link = {
    href: string;
    title: string;
}

const headerNav: Record<string, Link> = {
    main: {
        href: '/',
        title: 'Main',
    },
    shop: {
        href: '/shop',
        title: 'Shop',
    },
    about: {
        href: '/about',
        title: 'About',
    }
};
---

<header class="navbar bg-base-100 flex justify-between">
    <div>
        <a class="btn btn-ghost normal-case text-xl">Shoposhop</a>
    </div>
    <ul>
        {Object.values(headerNav).map((item) => (
            <li>
                <a href={item.href} class="btn btn-ghost normal-case">{item.title}</a>
            </li>
        ))}
    </ul>
    <div class="flex-none">
        <Cart client:load />
        <div class="dropdown dropdown-end">
            <label tabindex="0" class="btn btn-ghost btn-circle avatar">
                <div class="w-10 rounded-full">
                <img src="https://placeimg.com/80/80/people" />
                </div>
            </label>
            <ul tabindex="0" class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52">
                <li>
                <a class="justify-between">
                    Profile
                    <span class="badge">New</span>
                </a>
                </li>
                <li><a>Settings</a></li>
                <li><a>Logout</a></li>
            </ul>
        </div>
    </div>
</header>

